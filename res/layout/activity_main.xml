<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.25"
        android:orientation="horizontal" >

        <!-- Giá trị trên cân box -->

        <TextView
            android:id="@+id/receive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ff33b5e5"
            android:gravity="center"
            android:text=" 100 Kg"
            android:textColor="#ffffffff"
            android:textSize="64sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" >

        <!-- Giá trị trên cân box -->

        <Button
            android:id="@+id/ketnoi_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="ketnoican"
            android:text="Kết Nối Cân" />

        <Button
            android:id="@+id/ketnoiin_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="ketnoiin"
            android:text="Kết Nối Máy In" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice" >
        </ListView>
    </LinearLayout>
    <!-- Tong ket qua android:listSelector="@drawable/highlightlist" -->

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tong"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ff33b5e5"
            android:gravity="left|center_vertical"
            android:text="Tổng: 0 Kg"
            android:textColor="#ffffffff"
            android:textSize="48sp" />

        <CheckBox
            android:id="@+id/nhan_check"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="X 2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="0.25"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/can_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Cân" />

        <Button
            android:id="@+id/xoa_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Xóa" />
    </LinearLayout>

</LinearLayout>